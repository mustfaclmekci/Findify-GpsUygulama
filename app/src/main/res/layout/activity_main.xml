<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Ana içerik kısmı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_bottom"
            app:title="."
            app:titleTextColor="#fff"/>

        <!-- Eski layout içeriğiniz -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="100"
            android:background="@color/background_color">

            <!-- Mevcut TextView ve Butonlar -->
            <TextView
                android:id="@+id/tvCoordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="Konumu Bul"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="8" />

            <!-- Cihazları Bul butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFetchData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/colorkonum"
                android:text="Cihazları Bul"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="7" />

            <!-- İki butonu yatay düzenle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <!-- Ses Çıkar Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleSound"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:text="Ses Çıkar"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <!-- LED Yak Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleLed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:text="LED Yak"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Harita -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/bg_radius"
                android:layout_weight="50">
                <fragment
                    android:background="@drawable/bg_radius"
                    android:id="@+id/id_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <!-- Yan Menü (NavigationView) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"
        android:background="@color/white" />


</androidx.drawerlayout.widget.DrawerLayout>
